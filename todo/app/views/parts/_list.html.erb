<% if !data.empty? %>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">名前</th>
        <th scope="col">メールアドレス</th>
        <th scope="col">作成日時</th>
        <th scope="col">詳細</th>
      </tr>
    </thead>
    <tbody>
      <% data.each do |user| %>
        <tr>
          <th scope="row"><%= user[:id] %></th>
          <td><%= user[:name] %></td>
          <td><%= user[:email] %></td>
          <td><%= user[:created_at] %></td>
          <td><a href=<%= @link_detail + user[:id] %>>詳細を見る</a></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>
  
  <p>一覧はありません。</p>

<% end %>
