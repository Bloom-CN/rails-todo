
<%= form_with model: @user_model, url: signup_path do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "三文字以上の名前", class: "form-control mb-3" %>
  </div>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, placeholder: "user@example.com", class: "form-control mb-3"  %>
  </div>
  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, placeholder: "パスワード", class: "form-control mb-3"  %>
  </div>
  <div class="form-group">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, placeholder: "再設定用パスワード", class: "form-control mb-3"  %>
  </div>
  <%= form.submit class:'btn btn-primary' %>

  <% if @user_model.errors.any? %>
    <div class="alert alert-danger">
      <% @user_model.errors.full_messages.each do |message|  %>
        <div>
          <%= message %>
          error
        </div>
      <% end  %>
    </div>
  <% end %>
<% end %>
