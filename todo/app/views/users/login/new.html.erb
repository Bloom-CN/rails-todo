<div class="d-flex justify-content-center">
  <div class="w-50">
  
    <%= render "parts/alert", flash_status: flash %>

    <%= form_with class: "mb-3", url: login_path do |form| %>
      <div class="form-group form-outline mb-4">
        <%= form.label :email %>
        <%= form.text_field :email, placeholder: "user@example.com", class: "form-control mb-3"  %>
      </div>
      
      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, placeholder: "Please enter your password", class: "form-control mb-3" %>
      </div>
        
      <!-- 2 column grid layout for inline styling -->
      <div class="row mb-5">
        <div class="col d-flex justify-content-center">
          <!-- Checkbox -->
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
            <label class="form-check-label" for="form2Example31"> Remember me </label>
          </div>
        </div>

        <div class="col">
          <a href="#!">Forgot password?</a>
        </div>
      </div>

      <!-- Submit button -->
      <%= form.submit "ログイン", class:'btn btn-primary btn-lg w-100' %>
    <% end  %>
    
    <!-- Register buttons -->
    <div class="text-center">
      <a href=<%= @link_signup %>>新規会員登録はこちらから</a>
    </div>
    
  </div>
</div>
