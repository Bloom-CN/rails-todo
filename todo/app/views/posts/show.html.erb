<div>
  <%= render "parts/alert", flash_status: flash %>
  
  <h2 class="mb-4">投稿詳細</h2>
  <dl class="mb-3">
    <dt>投稿者</dt>
    <dd class="fs-4"><%= @post_detail[:name] %></dd>
  </dl>
  <dl class="mb-3">
    <dt>タイトル</dt>
    <dd class="fs-4"><%= @post_detail[:title] %></dd>
  </dl>
  <dl class="mb-3">
    <dt>投稿内容</dt>
    <dd class="fs-4"><%= @post_detail[:context] %></dd>
  </dl>
  <dl class="mb-3">
    <dt>投稿日</dt>
    <dd class="fs-4"><%= @post_detail[:created_at] %></dd>
  </dl>
</div>

<div class="d-flex">
  <a class="btn btn-secondary me-1" href=<%= posts_list_path %>>投稿一覧へ</a>
  <% if @allow_edit_post  %>
    <a class="btn btn-primary me-1" href=<%= posts_edit_path %>>編集</a>
    <%= button_to "削除", posts_delete_path, params: {id: @post_detail[:id]}, method: :delete, class: 'btn btn-danger' %>
  <% end %>
</div>
