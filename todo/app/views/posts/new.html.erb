<div>
  <h2 class="mb-4">新しい投稿を作成</h2>
  <%= form_with model: @post_model, url: posts_create_path do |form| %>
    <%= form.hidden_field :user_id, value: @user_data[:id] %>
    
    <div class="form-group">
      <%= form.label :投稿者名 %>
      <%= form.hidden_field :name, value: @user_data[:name] %>
      <h4><%= @user_data[:name] %></h4>
    </div>
    <div class="form-group">
      <%= form.label :タイトル %>
      <%= form.text_field :title, placeholder: "タイトル", class: "form-control mb-3" %>
    </div>
    <div class="form-group">
      <%= form.label :投稿内容 %>
      <%= form.text_field :context, placeholder: "投稿内容", class: "form-control mb-3"  %>
    </div>
    <%= form.submit "投稿する", class:'btn btn-primary' %>
  <% end %>
  
  <% if @post_model.errors.any? %>
    <div class="alert alert-danger">
      <% @post_model.errors.full_messages.each do |message|  %>
        <div>
          <%= message %>
        </div>
      <% end  %>
    </div>
  <% end %>
</div>
